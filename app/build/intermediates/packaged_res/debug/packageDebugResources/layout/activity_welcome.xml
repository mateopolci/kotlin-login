<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="@string/welcome_title"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start">

            <CheckBox
                android:id="@+id/logo_ios"
                android:text="@string/welcome_IOS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textSize="18sp">
            </CheckBox>
            <ImageView
                android:id="@+id/imageview_ios"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/logo_ios"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start">

            <CheckBox
                android:id="@+id/logo_android"
                android:text="@string/welcome_Android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textSize="18sp">
            </CheckBox>
            <ImageView
                android:id="@+id/imageview_android"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/logo_android"
                android:visibility="gone" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkbox_programacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/welcome_Programacion"
                android:layout_marginBottom="8dp" />

            <CheckBox
                android:id="@+id/checkbox_redes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome_Redes"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />

            <CheckBox
                android:id="@+id/checkbox_seguridad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome_Seguridad"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />

            <CheckBox
                android:id="@+id/checkbox_hardware"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome_Hardware"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />

            <CheckBox
                android:id="@+id/checkbox_otra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome_Otra"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/edittext_other"
                android:layout_width="600px"
                android:layout_height="wrap_content"
                android:hint="@string/hint_enter_preference"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>